<h2><%= t('login.new_login') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-3 mt-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('register.email') %>
  </div>

  <div class="field mb-3 mt-3">
    <%= f.password_field :password, autocomplete: "current-password",
      class: "form-control", placeholder: t('register.password') %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field mb-3 mt-3">
      <%= f.check_box :remember_me %>
      <%= f.label(t('login.remember_me'))%>
    </div>
  <% end %>

  <div class="actions mb-3">
    <%= f.submit t('login.login_btn'), class: :"btn btn-primary" %>
    <%= link_to t('login.register_link'), new_registration_path(resource_name) %>
  </div>
<% end %>

