<h2><%= t("register.new_user_title") %></h2>


 <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %> 

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field mb-3 mt-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t('register.email') %>
  </div>

  <div class="field mb-3">
    <% if @minimum_password_length %>
      <%= f.password_field :password, autocomplete: "new-password",
      class: "form-control", placeholder: t('register.password_min_len', minimum_password_length: @minimum_password_length) %>
    <% else %>
      <%= f.password_field :password, autocomplete: "new-password",
      class: "form-control", placeholder: t('register.password') %>
    <% end %>
  </div>

  <div class="field mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: t('register.password_confirmation') %>
  </div>

  <div class="field mb-3">
  <% #TODO: Add timezone select class %>
  <%= f.time_zone_select(:timezone) %>
  </div>
  
  <div class="actions mb-3">
    <%= f.submit t("register.register_btn"), class: :"btn btn-primary" %>
    <%= link_to t('register.login_link'), new_user_session_path %>
  </div>
<% end %>