<%= form_for(current_user, html: { method: :put }) do |f| %>
  <div class="mb-3 mt-3">
    <%= f.label(:timezone, current_user.email, class: "form-control col-auto border-0 bg-secondary-subtle") %>
  </div>
  <div class="field mb-3 mt-3">
    <%= f.time_zone_select(:timezone, nil, { default: "current_user.timezone" }, { class: "form-select" }) %>
  </div>
  <div class="field mb-3 mt-3">
    <%= f.label(t('settings.locale')) %>:
    <%= f.select(:locale, I18n.available_locales.map(&:to_s), { class: "form-select" }) %>
  </div>
  <%= f.submit t("settings.update"), class: :"btn btn-primary" %>
<% end %>